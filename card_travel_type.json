{
  "type": "bubble",
  "hero": {
    "type": "image",
    "url": "https://www.jolijolidesign.com/wp-content/uploads/2015/01/Westfalia-vans-road-trip-joli-joli-design-19.jpg",
    "size": "full",
    "aspectRatio": "20:13",
    "aspectMode": "cover",
    "action": {
      "type": "uri",
      "uri": "http://linecorp.com/"
    }
  },
  "body": {
    "type": "box",
    "layout": "vertical",
    "spacing": "md",
    "contents": [
      {
        "type": "text",
        "text": "哪種類型的旅遊~",
        "wrap": true,
        "weight": "bold",
        "gravity": "center",
        "size": "md"
      }
    ]
  },
  "footer": {
    "type": "box",
    "layout": "vertical",
    "contents": [
      {
        "type": "button",
        "action": {
          "type": "postback",
          "label": "家庭",
          "data": "action=travel_type&mode=家庭旅遊",
          "displayText": "家庭旅遊"
        }
      },
      {
        "type": "button",
        "action": {
          "type": "postback",
          "label": "情侶",
          "data": "action=travel_type&mode=情侶旅遊",
          "displayText": "情侶旅遊"
        }
      },
      {
        "type": "button",
        "action": {
          "type": "postback",
          "label": "朋友",
          "data": "action=travel_type&mode=朋友旅遊",
          "displayText": "朋友旅遊"

        }
      },
      {
        "type": "button",
        "action": {
          "type": "postback",
          "label": "獨自小旅行",
          "data": "action=travel_type&mode=獨自小旅行",
          "displayText": "獨自小旅行"
        }
      }
    ]
  }
}